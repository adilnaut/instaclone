<h2> <%= @user.login %></h2>

<span class = "followers">
  Followers: <%= @user.followers.count %>
</span>

<span class = "followeds">
  Followeds: <%= @user.followed_users.count %>
</span>

<div class="follow_status">
  <%= render "partials/follow_status" %>
</div>


<% @posts.each do |post| %>
  <%= image_tag post.image(:large) %>

    <h3>
      <%= post.description %>
    </h3>

<% end %>
