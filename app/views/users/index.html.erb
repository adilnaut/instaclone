<ul class="list-group">
  <% @users.each do |user| %>
    <li class="list-group-item">
      <!--<%= image_tag "http://placehold.it/60x60", class: "img-circle" %> !-->
      <%= image_tag user.avatar(:thumbnail), class: "img-circle" %>
      <%= link_to user.login, user%>


      <div class="pull-right">

        <div class="follow_status"  id="follow-<%=user.id%>">
          
          <% if current_user.following?(user.id) %>
            <%= render("partials/unfollow", user: user) %>
          <% else %>
            <%= render("partials/follow", user: user) %>
          <% end %>

        </div>

      </div>


    </li>

  <% end %>
</ul>
